<%- include("./partials/head") %>
<body>
    
<%- include("./partials/header") %>

  <div class="container">
    <main class="register">

        <h2>Registro</h2>

        <form action="/register" method="POST" class="register-form">

            <div class="inputs">

                <label for="usuario">
                    <h3>Usuario</h3>
                    <div class="icono-caja">
                        <i class="fa-solid fa-user-astronaut"></i>
                        <input type="text" name="usuario" id="usuario" placeholder="Usuario" minlength="2">
                        <span class="feedback">Ingresa tu nombre de usuario</span>
                    </div>

                </label>

                <label for="email">
                    <h3>Email</h3>
                    <div class="icono-caja">
                        <i class="fa-solid fa-envelope"></i>
                        <input type="email" name="email" id="email" placeholder="Email">
                        <span class="feedback">Ingresa un email válido</span>
                    </div>

                </label>


                <label for="password">
                    <h3>Password</h3>
                    <div class="icono-caja">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" name="password" id="password" placeholder="Password" minlength="2">
                        <span class="feedback">Ingresa un password válido</span>
                    </div>

                </label>
            </div>

            <div class="botonYpregunta">
                <input id="boton-registro" type="submit" name="" value="Registrarme">
                <a href="/login">Ya tienes cuenta?</a>
            </div>
        </form>
    </main>

    <%- include("./partials/footer") %>

  </div>
  
</body>

</html>
