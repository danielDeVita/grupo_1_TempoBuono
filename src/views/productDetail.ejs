<%- include("./partials/head") %>
<body>

  <%- include("./partials/header") %>

  <div class="container">
    <main>

      <div class="miga-de-pan">
          <ul>
            <li><a href="/">Home</a></li>/
            <li><a href="/products">Lista de productos</a></li>/
            <li><a href="/products/<%= producto.idProd%>">Detalle del producto</a></li>
          </ul>
      </div>

    
      <div class="fichaDeProducto">
      
        <h2><%=producto.ProductsName%></h2>

        <div class="imagen">
        <img src="/img/<%=  producto.productsImages[0] ? producto.productsImages[0].productsImagesNombre : 'default image coffee.png' %>" alt="Imagen de alfajor"><!-- tabla(modelo).relacion.nombreDelCampo(en la DB) -->
        </div>

        <div class="descripcion">

        <!-- Hay que estilizar el contador de las líneas 68 y 69, está feo. -->
        <div class="cantidad">
          <p class="precio">$ <%=producto.ProductsPrice%></p>
            <label for="cantProd">Cantidad:
            <input type="number" id="cantProd" name="cantidadDeProducto" min="1" max="10" value="1">
            </label>

            <button class="anadircar" type="button">Añadir al carrito</button>
        </div>
        <div class="descripcion-total">
            <h4>Descripción del producto</h4>
            <p><%=producto.ProductsDescription%></p>
         </div>
          
        <div class="categoria">
          <h4>Categoría:</h4>
          <p><%=producto.productsCategory.productsCategorNombre%></p>
        </div>
          
        <div class="compartir">
          <h4>Compartir:</h4>
          <a href="#"><i class="fa-brands fa-facebook-square"></a></i>
          <a href="#"><i class="fa-brands fa-instagram-square"></i></a>
        </div>
        </div>

      </div>

    <div class="ProductosRelacionados">
        <h2 id="tit-relacionados">Productos relacionados</h2>
        <article>
          <img src="/img/alfajor_marplatense.png" alt="producto relacionado 1">
          <h3>Mar del Plata</h3>
          <p>Alfajores</p>
          <p class="Precio">$ 20.00 USD</p>
        </article>

        <article>
          <img src="/img/alfajor_cordobes.png" alt="producto relacionado 2">
          <h3>Cordobés</h3>
          <p>Alfajores</p>
          <p class="Precio">$ 30.00 USD</p>
        </article>

        <article>
          <img src="/img/alfajor_mendocino.png" alt="producto relacionado 3">
          <h3>Mendocino</h3>
          <p>Alfajores</p>
          <p class="Precio">$ 25.00 USD</p>
        </article>
    </div>

    </main>

    <%- include("./partials/footer") %>
 
  </div>
</body>

</html>
